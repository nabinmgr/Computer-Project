<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-topcancel">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul class="navbar-right">
                    <li><a href="~/Home/" class="navbar-brand">ClassifiedAd</a></li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/admin/pages">Pages</a></li>
                    <li><a href="/admin/pages/EditSidebar">Sidebar</a></li>
                    <li><a href="/admin/shop/Categories">Categories</a></li>
                    <li><a href="/admin/shop/Products">Products</a></li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-xs-12 col-md-2">
                @Html.Action("CategoryMenuPartial", "Shop")
            </div>

            @RenderBody()
            
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Classified Advertising</p>
        </footer>
      </div>

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
